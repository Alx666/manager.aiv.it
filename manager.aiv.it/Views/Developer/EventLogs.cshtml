<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Type
                </th>
                <th>
                   User
                </th>
                <th>
                    Text
                </th>
            </tr>

            @foreach (var e in Model)
            {
                <tr>
                    <td> 
                        @e.Date
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => e.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => e.User.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => e.Description)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>