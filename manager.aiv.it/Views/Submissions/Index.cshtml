@model IEnumerable<manager.aiv.it.Submission>

@{
    ViewBag.Title = "Index";
}

<div class="row row-title title-margin">
    <div class="col-md-10 col-xs-6">
        <span class="title">Index</span>
    </div>
    <div class="col-md-2 col-xs-6 text-right">
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
            <span>Create New</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubmissionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RevisionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revisor.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Assignment.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Binary.Filename)
                </th>
                <th>
                    Details
                </th>
                <th class="text-right">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmissionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RevisionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Revisor.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Assignment.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Binary.Filename)
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm action-button" href="@Url.Action("Details", new { assignmentId = item.AssignmentId, studentId = item.StudentId })">
                            <i class="glyphicon glyphicon-chevron-right"></i>
                        </a>
                    </td>
                    <td class="text-right">
                        <a class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit", new { assignmentId = item.AssignmentId, studentId = item.StudentId })">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>

                        <a class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Delete", new { assignmentId = item.AssignmentId, studentId = item.StudentId })">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

