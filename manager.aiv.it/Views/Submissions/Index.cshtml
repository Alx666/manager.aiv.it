@model IEnumerable<manager.aiv.it.Submission>

@{
    ViewBag.Title = "Index";
}

<!-- aggiungere classe row-title per effettuare follow scroll -->
<div class="row title-margin">
    <div class="col-md-9 col-xs-6">
        <span class="title">Index</span>
    </div>
    <div class="col-md-3 col-xs-6 text-right">
        <!--<a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
            <span>Create New</span>
        </a>-->
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    Submission Date
                </th>
                <th>
                    Revision Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revisor)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Assignment.Description)
                </th>*@
                @*<th>
                    Revisor's Note
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Binary.Filename)
                </th>*@
                <th class="text-right table-actions">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SubmissionDate.ToShortDateString()
                    </td>
                    <td>
                        @if (item.RevisionDate != null && item.RevisionDate is System.DateTime)
                        {
                            <span>@(((System.DateTime)item.RevisionDate).ToShortDateString())</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                        /
                        @Html.DisplayFor(modelItem => item.Assignment.ExerciseValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Revisor.DisplayName)
                    </td>


                    @*<td>
                        @Html.DisplayFor(modelItem => item.Assignment.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RevisorNote)
                    </td>
                        @if (item.Binary != null)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.Binary.Filename)
                            </td>
                        }*@


                    <td class="text-right">
                        @*<a title="Edit @item.DisplayName"   class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit", new { assignmentId = item.AssignmentId, studentId = item.StudentId })"><i class="glyphicon glyphicon-pencil"></i></a>*@
                        @*<a title="Delete @item.DisplayName" class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Delete", new { assignmentId = item.AssignmentId, studentId = item.StudentId })"><i class="glyphicon glyphicon-remove"></i></a>*@
                        <a title="View @item.DisplayName" class="btn btn-default btn-sm action-button" href="@Url.Action("Details", new { assignmentId = item.AssignmentId, studentId = item.StudentId })"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </td>
                </tr>
            }

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="8" class="text-center">
                        <span>No results found.</span>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

