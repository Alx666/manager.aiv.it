@model IEnumerable<manager.aiv.it.Note>

@{
    ViewBag.Title = "Index";
}

<div class="row row-title title-margin">
    <div class="col-md-10 col-xs-6">
        <span class="title">Index</span>
    </div>
    @*<div class="col-md-2 col-xs-6 text-right">
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
            <span>Create New</span>
        </a>
    </div>*@
</div>

<div class="row">
    <div class="col-xs-12 table-container">
        <div class="table-left-indicator"> << </div>
        <div class="table-right-indicator"> >> </div>
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    Author
                </th>
                <th>
                    Subject
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th class="text-right table-actions">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td class="text-right">
                        @*<a title="Edit"   class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit", new { id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>*@
                        <a title="Delete" class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Delete", new { id = item.Id })"><i class="glyphicon glyphicon-remove"></i></a>
                        <a title="View"   class="btn btn-default btn-sm action-button" href="@Url.Action("Details", new { id = item.Id })"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </td>
                </tr>
            }

            @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan="5" class="text-center">
                        <span>No results found.</span>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
