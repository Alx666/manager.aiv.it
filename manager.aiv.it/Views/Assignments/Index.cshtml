@model IEnumerable<manager.aiv.it.Assignment>

@{
    ViewBag.Title = "Index";
}

<div class="row row-title title-margin">
    <div class="col-md-10 col-xs-6">
        <span class="title">Index</span>
    </div>
    <div class="col-md-2 col-xs-6 text-right">
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
            <span>Create New</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 table-container">
        <div class="table-left-indicator"> << </div>
        <div class="table-right-indicator"> >> </div>
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    Assigned By
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exercise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exercise.Type)
                </th>
                <th>
                    Value
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnlockDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deadline)
                </th>
                <th class="text-right table-actions">
                    Actions
                </th>
            </tr>
            
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exercise.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exercise.Type.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExerciseValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnlockDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deadline)
                    </td>
                    <td class="text-right">
                        <a title="Edit @item.DisplayName"   class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit", new { id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a title="Delete @item.DisplayName" class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Delete", new { id = item.Id })"><i class="glyphicon glyphicon-remove"></i></a>
                        <a title="View @item.DisplayName"   class="btn btn-default btn-sm action-button" href="@Url.Action("Details", new { id = item.Id })"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </td>
                </tr>
            }

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="8" class="text-center">
                        <span>No results found.</span>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
