@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Communications", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="row row-title">
        <div class="col col-xs-4 col-sm-2">
            <!-- nothing -->
        </div>
        <div class="col col-xs-4 col-sm-8">
            <span class="title">Email Communication</span>
        </div>
        <div class="col col-xs-4 col-sm-2">
            <div class="text-right">

                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-send pull-right icon-right"></i>
                    <span>Send</span>
                </button>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-xs-12">
            <div class="thumbnail">
                <div class="card-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <section>
                                <h4 class="section-title">Base Data</h4>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <label for="subject">Subject</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <div class="form-group">
                                            @Html.Editor("subject", new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <label for="message">Message</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <div class="form-group">
                                            @Html.TextArea("message", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <label for="classes">Classes</label>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <label for="classes">Staff</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        @Html.ListBox("classes", null, htmlAttributes: new { @class = "form-control", @style = "min-height:300px;" })
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        @Html.ListBox("staff", null, htmlAttributes: new { @class = "form-control", style = "min-height: 300px;" })
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
