@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Communications", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="row row-title">
        <div class="col col-xs-4 col-sm-2">
            <div class="text-left">
                <a class="btn btn-default" href='@Url.Action("Index")'>
                    <i class="glyphicon glyphicon-chevron-left pull-left icon-left"></i>
                    <span>Back</span>
                </a>
            </div>
        </div>
        <div class="col col-xs-4 col-sm-8">
            <span class="title">Email Communication</span>
        </div>
        <div class="col col-xs-4 col-sm-2">
            <div class="text-right">

                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-send pull-right icon-right"></i>
                    <span>Send</span>
                </button>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-xs-12">
            <div class="thumbnail">
                <div class="card-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <section>
                                <h4 class="section-title">Base Data</h4>
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        Classes
                                        <div class="col-md-10">
                                            @Html.ListBox("classes", null, htmlAttributes: new { @class = "form-control", @style = "min-height:150px;" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Staff
                                        <div class="col-md-10">
                                            @Html.ListBox("staff", null, htmlAttributes: new { @class = "form-control", style = "min-height: 300px;" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Subject
                                        <div class="col-md-10">
                                            @Html.TextBox("subject")
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        Message
                                        <div class="col-md-10">
                                            @Html.TextArea("message")
                                        </div>
                                    </div>

                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
