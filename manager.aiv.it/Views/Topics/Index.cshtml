@model IEnumerable<manager.aiv.it.Topic>

@{
    ViewBag.Title = "Index";
}

<div class="row row-title title-margin">
    <div class="col-md-10 col-xs-6">
        <span class="title">Index</span>
    </div>
    <div class="col-md-2 col-xs-6 text-right">
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
            <span>Create New</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-responsive table-hover">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAdded)
                </th>

                <th class="text-right">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.DisplayName)
                    </td>
                    <td>
                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DateAdded))
                    </td>
                    <td class="text-right">
                        <a title="Edit @item.DisplayName"   class="btn btn-default text-primary btn-sm" href="@Url.Action("Edit", new { id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a title="Delete @item.DisplayName" class="btn btn-default text-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })"><i class="glyphicon glyphicon-remove"></i></a>
                        <a title="View @item.DisplayName"   class="btn btn-default btn-sm" href="@Url.Action("Details", new { id = item.Id })"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </td>
                </tr>
            }

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        <span>No results found.</span>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>