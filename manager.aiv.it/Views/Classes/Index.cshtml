@model IEnumerable<manager.aiv.it.Class>

@{
    ViewBag.Title = "Index";
}

<div class="row row-title title-margin">
    <div class="col-md-10 col-xs-6">
        <span class="title">Index</span>
    </div>
    <div class="col-md-2 col-xs-6 text-right">
        @if (Session.GetUser().IsDirector)
        {
            <a class="btn btn-primary" href="@Url.Action("Create")">
                <i class="glyphicon glyphicon-plus pull-right icon-right"></i>
                <span>Create New</span>
            </a>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayStudentsCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayLessonsCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayFrequency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayPoints)
                </th>
                <th class="text-right table-actions">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayStudentsCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayLessonsCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayFrequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayPoints)
                    </td>
                    <td class="text-right">
                        @if (Session.GetUser().IsDirector)
                        {
                            <a title="Edit @item.DisplayName" class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit", new { id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a title="Delete @item.DisplayName" class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Delete", new { id = item.Id })"><i class="glyphicon glyphicon-remove"></i></a>
                        }
                        <a title="View @item.DisplayName" class="btn btn-default btn-sm action-button" href="@Url.Action("Details", new { id = item.Id })"><i class="glyphicon glyphicon-chevron-right"></i></a>
                    </td>
                </tr>
            }

            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <a class="btn btn-block" href="@Url.Action("Create")">No results found. Click here to create a new record.</a>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>


